@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>

<html lang="en" dir="ltr">
<style>
    .text-danger {
        color: red;
        font-size: 10px;
    }
</style>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Page</title>
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Font Awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
          type="text/css">


</head>

<body>
    <div class="register-container" style="margin:130px; margin-left:270px ">
        <h1>Registration</h1>
        <div class="content">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="user-details">

                    <div class="input-box">
                        <span class="details">Email</span>
                        <input asp-for="Input.Email" type="text" placeholder="Enter your email" >
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Password</span>
                        <input asp-for="Input.Password" type="password" placeholder="Enter your password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Confirm Password</span>
                        <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm your password">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Role </span>
                        <select class="selectgroup" asp-for="Input.Role" type="text" placeholder="Enter Role">
                            <option>Donor</option>
                            <option>Seeker</option>
                            <option>BloodBank</option>
                        </select>
                    </div>

                </div>
                <div class="button">
                    <input type="submit" value="Register">
                </div>
            </form>
        </div>
    </div>

    <script>
        var coll = document.getElementsByClassName("collapsible");
        var i;

        for (i = 0; i < coll.length; i++) {
            coll[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var content = this.nextElementSibling;
                if (content.style.display === "block") {
                    content.style.display = "none";
                } else {
                    content.style.display = "block";
                }
            });
        }
    </script>

    <script src="~/js/jquery-3.4.1.slim.min.js"></script>
    <script src="~/js/revealonscroll.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/scroll.js"></script>

</body>

</html>